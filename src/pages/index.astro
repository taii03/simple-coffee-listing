---
import CoffeesList from '@/components/coffees-list.svelte';
import Layout from '@/layouts/layout.astro';
import { getCoffeeList } from '@/services/coffee-list';

const coffeeList = await getCoffeeList();
---

<Layout title="Welcome to Astro.">
	<div class="min-h-screen justify-center pt-[10.7rem] pb-[10.7rem] flex-col items-center flex">
		<div
			class="text-pastel-white py-16 w-11/12 sm:w-10/12 bg-background-1 flex flex-col gap-y-6 px-10 md:px-24 rounded-xl"
		>
			<header class="grid place-content-center gap-y-3">
				<h1 class="text-3xl font-semibold tracking-wide text-center">Our Collection</h1>
				<p class="max-w-lg text-center text-muted font-semibold">
					Introducing our Coffee Collection, a selection of unique coffees from different roast types and
					origins, expertly roasted in small batches and shipped fresh weekly.
				</p>
			</header>

			<main class="max-w-4xl mx-auto">
				<CoffeesList coffeeList={coffeeList} client:load />
			</main>
		</div>
	</div>
</Layout>
